<h1>Login</h1>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
    <%= form_tag '/login', method: :post do %>   

    <%= label_tag :username %>
    <%= text_field_tag :username %><br>
    
    <%= label_tag :email %>
    <%= text_field_tag :email %><br>

    <%= label_tag :password %>
    <%= password_field_tag :password %><br>

    <%= submit_tag "Submit" %>



    <% end %>